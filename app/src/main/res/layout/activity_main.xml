<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="729dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="2dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="118dp"
                    android:layout_height="50pt"
                    android:text="TextView" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/AC"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="AC" />

                <Button
                    android:id="@+id/plusminus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+/-" />

                <Button
                    android:id="@+id/precent"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="%" />

                <Button
                    android:id="@+id/div"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="/" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b7"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="7" />

                <Button
                    android:id="@+id/b8"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="8" />

                <Button
                    android:id="@+id/b9"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="9" />

                <Button
                    android:id="@+id/mul"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="X" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b6"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="6" />

                <Button
                    android:id="@+id/b5"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="5" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="4" />

                <Button
                    android:id="@+id/plus"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="+" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b3"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="3" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="2" />

                <Button
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="1" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="-" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/b0"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="0" />

                <Button
                    android:id="@+id/eq"
                    android:layout_width="match_parent"
                    android:layout_height="50pt"
                    android:text="eq"
                    tools:text="=" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>